<body>
    <div class="container">


        <div class="kayitOl">
            <div class=" mt-5">

                <div class=" KayitIcerik">
                    <form>
                        <div class="form-group ">
                            <center>
                                <i class="fab fa-twitter   iconTwitter"></i>
                            </center>
                            <br />
                            <span class="loginBaslik">

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/fontawesome.css" rel="stylesheet" />
    <link href="~/css/sayfa.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/popper/umd/popper.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <script src="~/lib/bootstrap-select/js/i18n/defaults-tr_TR.js"></script>
    <script src="~/lib/bootstrap-select/js/bootstrap-select.js"></script>
    <script src="~/lib/bootstrap-table/bootstrap-table.js"></script>
    <script src="~/lib/font-awesome/js/all.js"></script>
    <script src="~/lib/font-awesome/js/fontawesome.js"></script>
    <script src="~/lib/jquery-inputmask/inputmask.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</head>
<body>
    <div class="container">
        <div class="row mt-2">
            <div class="col-md-3 dvSolMenu">
                <i class="fab fa-twitter   iconTwitter"></i>
                <ul>
                    <li class="icerikList">
                        <a href="/Home/Index">
                            <span>
                                <i class="fas fa-home"></i>
                                Anasayfa
                            </span>
                        </a>
                    </li>
                    <li class="icerikList">
                        <a href="/Home/Kesfet">
                            <i class="fas fa-search"></i><span>
                                Keşfet
                            </span>
                        </a>
                    </li>

                    <li class="icerikList">
                        <a href="#">
                            <i class="far fa-bell"></i> <span>
                                Bildirim
                            </span>
                        </a>
                    </li>
                    <li class="icerikList">
                        <a href="#">
                            <i class="far fa-envelope"></i><span>
                                Mesajlar
                            </span>
                        </a>
                    </li>
                    <li class="icerikList">
                        <a href="#">
                            <i class="fas fa-map-marker-alt"></i><span>
                                Yer İşaretleri
                            </span>
                        </a>
                    </li>
                    <li class="icerikList">
                        <a href="#">
                            <i class="far fa-list-alt"></i><span>
                                Listeler
                            </span>
                        </a>
                    </li>
                    <li class="icerikList">
                        <a href="#">
                            <i class="fas fa-user"></i><span>
                                Profil
                            </span>
                        </a>
                    </li>
                    <li class="icerikList">
                        <a href="#">
                            <i class="far fa-comment-dots"></i> <span>
                                Daha Fazla
                            </span>
                        </a>
                    </li>
                    <li class="buttonTweetleDis">
                        <button class="buttonTweetle">Tweetle</button>
                    </li>
                </ul>
            </div>
            <div class="col-md-9 dvIcerik">

                <div id="menuAcKapat" class="btn  d-flex justify-content-end d-flex align-items-end mnuAcKapat">

                    <ul>
                        <li style="list-style-type: none;"><i class="far fa-hand-point-left" style=" color: rgb(29, 155, 240) !important;"></i></li>
                    </ul>


                </div>
                <div>

                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</body>
</html>

<script>
    $(document).ready(function () {


        $("#menuAcKapat").click(function () {
            $(".dvSolMenu").toggle();
            if ($(".dvSolMenu").css("display") == "none") {

                $(".dvIcerik").addClass("col-md-12");
                $(".idIcon").addClass("far fa-hand-point-right");
                $(".idIcon").removeClass("far fa-hand-point-left");
            }

            else {
                $(".dvIcerik").removeClass("col-md-12");
                $(".idIcon").addClass("far fa-hand-point-left");
                $(".idIcon").removeClass("far fa-hand-point-right");

            }

        });

    });


</script>
